<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loadscreenbackground"
    tools:context=".Member">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="734dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="16dp"
                app:srcCompat="@drawable/right_icons" />

            <LinearLayout
                android:layout_width="379dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Member Details"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="normal" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="535dp"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="142.5dp"
                        android:layout_height="150dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/background_ouline"
                        android:backgroundTintMode="screen"
                        android:elevation="8dp">

                        <Button
                            android:id="@+id/btnaddmemberformdetailsscreen"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#00FFFFFF"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="Add Member"
                            android:textSize="14sp"
                            app:icon="@drawable/bookicon"
                            app:iconGravity="textTop"
                            app:iconPadding="20dp"
                            app:iconSize="50dp" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="142.5dp"
                        android:layout_height="150dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/background_ouline"
                        android:backgroundTintMode="screen"
                        android:elevation="8dp">

                        <Button
                            android:id="@+id/btnviewmemberfromdetailsscreen"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:backgroundTint="#00262C34"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="View Member"
                            android:textSize="14sp"
                            app:icon="@drawable/icons8_member_50"
                            app:iconGravity="textTop"
                            app:iconPadding="20dp"
                            app:iconSize="50dp" />
                    </FrameLayout>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
